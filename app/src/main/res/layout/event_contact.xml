<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/pl"    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            app:cardElevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:cardBackgroundColor="#00000000">
        </android.support.v7.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/productsans"
            android:text="Faculty Coordinator"
            android:textAlignment="center"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="18dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/download"   >



                <ImageView
                    android:id="@+id/fimg"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignTop="@+id/center"
                    android:layout_marginStart="10dp" />

                <RelativeLayout
                    android:id="@+id/center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
                    android:layout_toEndOf="@id/fimg"
                    android:layout_toLeftOf="@id/c1"
                    android:layout_toRightOf="@id/fimg"
                    android:layout_toStartOf="@id/c1"
                    android:fontFamily="@font/productsans"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/fname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/productsans"
                        android:text="fname"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                    <TextView
                        android:text="fcontact"
                        android:id="@+id/fcontact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fname"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:textColor="#fff"
                        android:textSize="18sp" />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/c1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_call"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="ondailButton" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/productsans"
            android:text="Student Coordinator"
            android:textAlignment="center"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="18dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/download"
                >

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/simg"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignTop="@+id/center2"
                    android:layout_marginStart="10dp" />

                <RelativeLayout
                    android:id="@+id/center2"
                    android:layout_toRightOf="@id/simg"
                    android:layout_toLeftOf="@id/c2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:textAlignment="center"
                    android:layout_toEndOf="@id/simg"
                    android:layout_toStartOf="@id/c2">

                    <TextView
                        android:id="@+id/sname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/productsans"
                        android:text="sname"
                        android:textAlignment="viewStart"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/scontact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sname"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/productsans"
                        android:text="scontact"
                        android:textAlignment="viewStart"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/c2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_call"
                    android:clickable="true"
                    android:focusable="true" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:background="#10000000"
            android:fontFamily="@font/productsans"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <android.support.v7.widget.CardView
            app:cardElevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardBackgroundColor="#00000000">
        </android.support.v7.widget.CardView>


    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>